{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "index": {
      "refresh_interval": "1s"
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "opinion_id": {
        "type": "keyword"
      },
      "chunk_index": {
        "type": "integer"
      },
      "text": {
        "type": "text",
        "analyzer": "english"
      },
      "case_name": {
        "type": "text",
        "analyzer": "english",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "vector_embedding": {
        "type": "dense_vector",
        "dims": 4096,
        "index": true,
        "similarity": "cosine"
      },
      "vectorized_at": {
        "type": "date"
      }
    }
  }
}
